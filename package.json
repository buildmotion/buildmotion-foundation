{
  "name": "buildmotion-foundation",
  "version": "1.0.7",
  "description": "An Angular custom module that contains foundation elements for buildmotion Angular applications. Basically, the framework for buildmotion NG.",
  "main": "index.js",
  "scripts": {
    "transpile": "ngc",
    "package": "rollup -c",
    "minify": "uglifyjs dist/bundles/buildmotion-foundation.umd.js --screw-ie8 --compress --mangle --comments --output dist/bundles/buildmotion-foundation.umd.min.js",
    "build": "npm run transpile && npm run package && npm run minify"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/buildmotion/buildmotion-foundation"
  },
  "keywords": [
    "buildmotion",
    "Angular",
    "framework",
    "stooges"
  ],
  "author": {
    "name": "Matt Vaughn",
    "email": "matt.vaughn@buildmotion.com",
    "url": "http://www.buildmotion.com"
  },
  "license": "MIT",
  "dependencies": {
    "@angular/http": "^5.0.2",
    "angular-actions": "^2.0.0",
    "angular-rules-engine": "^2.1.1",
    "buildmotion-logging": "^2.0.6",
    "rxjs": "^5.5.0"
  },
  "devDependencies": {
    "@angular/cli": "^1.5.2",
    "@angular/common": "^5.0.2",
    "@angular/compiler": "^5.0.2",
    "@angular/compiler-cli": "^5.0.2",
    "@angular/core": "^5.0.2",
    "rollup": "^0.50.0",
    "uglify-js": "^3.1.10"
  }
}
