{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true, /* generate type definition files; */
        "experimentalDecorators": true,
        "inlineSources": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": false, /* true to support Angular 4.0 */
        "outDir": "dist",
        "paths": {
            "@angular/core": ["node_modules/@angular/core/*"],
            "@angular/http": ["node_modules/@angular/http/*"],
            "@angular/router": ["node_modules/@angular/router/*"],
            "rxjs/*": ["node_modules/rxjs/*"],
            "buildmotion-alert": ["node_modules/buildmotion-alert/*"],
            "buildmotion-logging": ["node_modules/buildmotion-logging/*"]
        },
        "rootDir": "src/app", /* pointing to [src/app] to allow for angular-cli */
        "skipLibCheck": true,
        "sourceMap": true,
        "strictNullChecks": true, /* support for Angular 4.1 */
        "stripInternal": true,
        "target": "es5"
    },
    "files": [
        "./src/app/index.ts"
    ],
    "angularCompilerOptions": {
        "strictMetadataEmit": true,
        "genDir": "aot-dist"
    }
}