{
    "compilerOptions": {
        "baseUrl": "",
        "declaration": true, /* generate type definition files; */
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "inlineSources": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": true, /* true to support Angular 4.0 */
        "outDir": "dist",
        "paths": {
            "angular-rules-engine": ["node_modules/angular-rules-engine/*"],
            "angular-actions": ["node_modules/angular-actions/*"],
            "@angular/http": ["node_modules/@angular/http/*"],
            "rxjs/*": ["node_modules/rxjs/*"],
            "buildmotion-logging": ["node_modules/buildmotion-logging/*"]
        },
        "rootDir": "src/app", /* pointing to [src/app] to allow for angular-cli */
        "skipLibCheck": true,
        "sourceMap": true,
        "strictNullChecks": true, /* support for Angular 4.1 */
        "stripInternal": true,
        "target": "es5"
    },
    "files": [
        "./src/app/index.ts"
    ],
    "angularCompilerOptions": {
        "skipTemplateCodegen": true,
		"strictMetadataEmit": true,
		"genDir": "aot-dist"
    }
}